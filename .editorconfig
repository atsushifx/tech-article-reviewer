# default settings for til
# markdown and lint settings
#
#
#<<

root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# default character-set
charset = utf-8

# default indent style
indent_style = tab
indent_size = tab
tab_width = 4


### Settings by ext type
# no ext: general files settings
[**.]
indent_style = space
indent_size = 2
tab_width = 2

### Programming Languages
# typescript
[**.{js,ts,tsx}]
indent_style = space
indent_size = tab
tab_width = 4

# prompt for Gen.AI
[**.prompt]
indent_style = space
indent_size = tab
tab_width = 2


### Documents
# markdown
[**.md]
indent_style = space
indent_size = tab
tab_width = 2


### Settings
# json
[**.json]
indent_style = tab
indent_size = tab
tab_width = 2

# yaml
[**.{yaml,yml}]
indent_style = space
indent_size = tab
tab_width = 2

# ini, toml
[**.{ini,toml}]
indent_style = tab
indent_size = tab
tab_width = 4

# rc files
[**rc]
indent_style = space
indent_size = tab
tab_width = 2

### Shell Scripts
# shell script
[**.{sh,bash,zsh}]
indent_style = space
indent_size = 2
tab_width = 2

### Git config
# for git config
[**.git*]
indent_style = tab
indent_size = tab
tab_width = 4

[**/git/*]
indent_style = tab
indent_size = tab
tab_width = 4
