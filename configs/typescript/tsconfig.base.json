{
	"compilerOptions": {
		// latest ECMAScript
		"lib": [
			"ESNext"
		],
		"target": "esnext",
		// best practice
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		// modules
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		// JSX
		"jsx": "react-jsx",
		// Javascript
		"allowJs": false,
		"downlevelIteration": false,
		// type definition
		// Bun の API などを型チェックできるよう、Bun 固有の型定義をグローバルに読み込む
		"types": []
	}
}
