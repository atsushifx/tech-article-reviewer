{
	"compilerOptions": {
		// latest ECMAScript
		"lib": [
			"ES2022",
			"DOM"
		],
		"target": "ES2022",
		// directory
		"rootDir": "./src",
		"outDir": "./dist",
		// best practice
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		// modules
		"module": "ESNext",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		// JSX
		"jsx": "react-jsx",
		// Javascript
		"allowJs": false,
		"downlevelIteration": false,
		// type definition
		// Bun の API などを型チェックできるよう、Bun 固有の型定義をグローバルに読み込む
		"types": []
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
