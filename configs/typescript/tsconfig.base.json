{
  "compilerOptions": {
    // latest ECMAScript
    "lib": [
      "ES2022",
      "DOM"
    ],
    "target": "ES2022",
    // best practice
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // modules
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    // JSX
    "jsx": "react-jsx",
    // Javascript
    "allowJs": false,
    "downlevelIteration": false,
    // type definition
    "types": []
  },
  "exclude": [
    ".git",
    "node_modules",
    "dist"
  ]
}
